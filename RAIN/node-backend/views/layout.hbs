<!DOCTYPE html>
<html lang="sl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800 font-sans">

    <!-- Navbar -->
    <nav class="bg-white shadow sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex space-x-4">
            <a href="/" class="text-lg font-semibold text-blue-600 hover:text-blue-800 transition">Domov</a>
            <a href="/admin" class="text-lg font-semibold text-blue-600 hover:text-blue-800 transition">Admin Panel</a>
          </div>
          <div class="flex space-x-4">
            {{#if session.userId}}
              <a href="/users/profile" class="text-gray-700 hover:text-blue-700 transition">Profil</a>
              <a href="/users/logout" class="text-gray-700 hover:text-red-600 transition">Odjava</a>
            {{else}}
              <a href="/users/login" class="text-gray-700 hover:text-blue-700 transition">Prijava</a>
              <a href="/users/register" class="text-gray-700 hover:text-green-600 transition">Registracija</a>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>

    <!-- Page content -->
    <main class="p-6 max-w-7xl mx-auto">
      {{{body}}}
    </main>

  </body>
</html>
