<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
  <div class="sidebar">
    <h2>Users</h2>
    <ul class="user-list">
      {{#each users}}
        <li>{{this.username}}</li>
      {{/each}}
    </ul>
  </div>

  <div class="main-content">
    <h1>Admin Overview</h1>

    <section>
      <h2>Landmarks</h2>
      <ul>
        {{#each landmarks}}
          <li>{{this.name}} — {{this.coordinates}}</li>
        {{/each}}
      </ul>
    </section>

    <section>
      <h2>Sensor Data</h2>
      <ul>
        {{#each sensorData}}
          <li>{{this.date}} — {{this.accelerometer}}</li>
        {{/each}}
      </ul>
    </section>

    <section>
      <h2>User Activities</h2>
      <ul>
        {{#each userActivities}}
          <li>{{this.date}} — visited: {{this.visited}}</li>
        {{/each}}
      </ul>
    </section>
  </div>

  <script src="/javascripts/dashboard.js" defer></script>
</body>
</html>